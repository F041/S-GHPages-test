{
  "openapi": "3.0.3",
  "info": {
    "title": "Simple Math API",
    "description": "An API that performs simple math on the client-side.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/add": {
      "get": {
        "summary": "Add two numbers",
        "parameters": [
          {
            "name": "a",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            },
            "description": "The first number"
          },
          {
            "name": "b",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            },
            "description": "The second number"
          }
        ],
        "responses": {
          "200": {
            "description": "The result of addition",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
